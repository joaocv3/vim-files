" vim: ft=vim
for setting in split(globpath("~/.vim/conf/plugins/settings", "*.settings"), '\n')
  execute('source '.setting)
endfor

" vim: filetype=vim
"activate the global shortcuts for ragtag
let g:ragtag_global_maps = 1

" configuring tagbar
let g:tagbar_width = 60
" set the options for syntatic to show marks and to open the error window
let g:syntastic_enable_signs = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_stl_format = '[%E{Err: %fe #%e}%B{, }%W{Warn: %fw #%w}]'

" configure the java autocomple plugin
if has("autocmd")
  autocmd Filetype java setlocal omnifunc=javacomplete#Complete
  autocmd Filetype java setlocal completefunc=javacomplete#CompleteParamsInfo
endif

"make auto close not to flush the keys
let g:AutoClosePreservDotReg = 0

"set the clojure options
let vimclojure#HighlightBuiltins=1
let vimclojure#ParenRainbow=1

" make css color not change the update time to crazy 100ms
let g:cssColorVimDoNotMessMyUpdatetime = 1

" disable the default zoom shortcuts
let g:use_default_shortcuts_for_zoom = 0

" use own color for the redgreen bar
let g:jasmine_use_own_colors = 0

" set ctrlp to show on top of the screen
let g:ctrlp_match_window_bottom = 0
let g:ctrlp_match_window_reversed = 0
let g:ctrlp_custom_ignore = {
  \ 'dir':  '\v[\/](.git|.hg|.svn|vendor/bundle|tmp/cache|coverage|public/source_maps)$',
  \ 'file': '\v(\.(exe|so|dll|gif|jpg|jpeg|png|svg|ico|woff|ttf|eot)|tags)$',
  \ }
