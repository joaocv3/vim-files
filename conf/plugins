" vim: syntax=vim

" Initiate plug
if !filereadable(expand("~/.vim/autoload/plug.vim"))
  silent !echo "Setting up vim-plug."
  silent !mkdir -p ~/.vim/autoload
  silent !echo "Create .vim/autoload"
  silent !curl -fLso ~/.vim/autoload/plug.vim https://raw.github.com/junegunn/vim-plug/master/plug.vim
  silent !echo "Curl plug.vim into autoload"
endif

call plug#begin('~/.vim/bundle')

" helper and highlight
Plug 'tpope/vim-rails'
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-rake'
Plug 'thoughtbot/vim-rspec', { 'for': ['ruby', 'rspec'] }
Plug 'Keithbsmiley/rspec.vim', { 'for': ['ruby', 'rspec'] }
Plug 'vim-scripts/VimClojure', { 'for': 'clojure' }
Plug 'kchmck/vim-coffee-script', { 'for': ['javascript', 'coffeescript'] }
Plug 'vim-ruby/vim-ruby', { 'for': 'ruby' }
Plug 'nelstrom/vim-textobj-rubyblock', { 'for': 'ruby' }
Plug 'ngmy/vim-rubocop', { 'for': 'ruby' }
Plug 'pangloss/vim-javascript', { 'for': 'javascript' }
Plug 'claco/jasmine.vim', { 'for': ['javascript', 'jasmine', 'jasmine-javascript'] }
Plug 'vim-scripts/jade.vim', { 'for': ['javascript', 'jade'] }
Plug 'tpope/vim-haml', { 'for': 'haml' }
Plug 'slim-template/vim-slim', { 'for': 'slim' }
Plug 'othree/html5.vim', { 'for': 'html' }
Plug 'svsudhir/textile.vim', { 'for': 'textile' }
Plug 'groenewege/vim-less'
Plug 'ap/vim-css-color', { 'for': ['css', 'sass', 'scss', 'less'] }
Plug 'rodjek/vim-puppet', { 'for': 'puppet' }

" improvement
Plug 'kien/ctrlp.vim', { 'on': 'CtrlP' }
Plug 'tpope/vim-unimpaired'
Plug 'tpope/vim-repeat'
Plug 'tpope/vim-ragtag'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-endwise'
Plug 'scrooloose/nerdcommenter'
Plug 'scrooloose/nerdtree', { 'on': 'NERDTreeToggle' }
Plug 'scrooloose/syntastic'
Plug 'jvortmann/zoom.vim'
Plug 'Townk/vim-autoclose'
Plug 'majutsushi/tagbar', { 'on': 'TagbarToogle' }
Plug 'kana/vim-textobj-user'
Plug 'sjl/gundo.vim', { 'on': 'GundoToggle' }
Plug 'samsonw/vim-task'
Plug 'tomtom/tlib_vim'
Plug 'MarcWeber/vim-addon-mw-utils'
Plug 'honza/vim-snippets'
Plug 'garbas/vim-snipmate'
Plug 'airblade/vim-gitgutter'
Plug 'bling/vim-airline'
Plug 'godlygeek/tabular'

" color schemes
Plug 'chriskempson/base16-vim'
Plug 'baskerville/bubblegum'
Plug 'tomasr/molokai'
Plug 'Pychimp/vim-luna'
Plug 'vim-scripts/wombat256.vim'
Plug 'vim-scripts/Wombat'
Plug 'altercation/vim-colors-solarized'
Plug 'w0ng/vim-hybrid'
Plug 'chriskempson/vim-tomorrow-theme'

" End Plug processing
call plug#end()
