" vim: filetype=vim
set background=dark

let g:solarized_termtrans=1

if filereadable(expand("$HOME/.vim/bundle/vim-colors-solarized/colors/solarized.vim"))
  colorscheme solarized
endif

set number tabstop=2 mouse=a
set ruler title cursorline
" set the space from the current line when scrolling
set scrolloff=3
" command-line completion shows a list of matches
set wmnu
" set spellcheck settings
highlight SpellBad term=underline gui=undercurl guisp=Orange

" enable set cursor style
let $NVIM_TUI_ENABLE_CURSOR_SHAPE = 1
