" vim: ft=vim
inoremap <expr> <C-n> pumvisible() ? '<C-n>' : '<C-n><C-r>=pumvisible() ? "\<lt>Down>" : ""<CR>'
" set mapping to autocomplete
inoremap <expr> <C-Space> pumvisible() ? '<C-n>' : '<C-x><C-o><C-n><C-p><C-r>=pumvisible() ? "\<lt>Down>" : ""<CR>'
" fix the damn uppercase WQs
"cmap W w
"cmap WQ wq
"cmap wQ wq
"cmap Q q

for shortcut in split(globpath("~/.vim/conf/shortcuts", "*.shortcut"), '\n')
  execute('source '.shortcut)
endfor
